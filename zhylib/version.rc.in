// version.rc.in
#define VER_FILEVERSION             @MY_VER_FILEVERSION@
#define VER_FILEVERSION_STR         "@MY_VER_FILEVERSION@\0"

#define VER_PRODUCTVERSION          @MY_VER_PRODUCTVERSION@
#define VER_PRODUCTVERSION_STR      "@MY_VER_PRODUCTVERSION@\0"

#define VER_FILEDESCRIPTION         "@MY_VER_FILEDESCRIPTION@\0"
#define VER_ORIGINALFILENAME        "@MY_VER_ORIGINALFILENAME@\0"
#define VER_INTERNALNAME            "@MY_VER_INTERNALNAME@\0"
#define VER_PRODUCTNAME             "@MY_VER_PRODUCTNAME@\0"

#define VER_LEGALCOPYRIGHT          "@MY_VER_LEGALCOPYRIGHT@\0"
//
//

1 VERSIONINFO
FILEVERSION VER_FILEVERSION
PRODUCTVERSION VER_PRODUCTVERSION
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
      VALUE "FileDescription", VER_FILEDESCRIPTION
      VALUE "FileVersion", VER_FILEVERSION_STR
      VALUE "InternalName",VER_INTERNALNAME
      VALUE "LegalCopyright", VER_LEGALCOPYRIGHT
      VALUE "OriginalFilename", VER_ORIGINALFILENAME
      VALUE "ProductName", VER_PRODUCTNAME
      VALUE "ProductVersion", VER_PRODUCTVERSION_STR
    END
  END
  /* For some reason the ProductVersion would not appear unless I add the following section: VarFileInfo */
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END
